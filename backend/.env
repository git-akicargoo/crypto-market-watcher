# ===================================================================
# Server Configuration
# ===================================================================
SERVER_PORT=8080
SPRING_PROFILES_ACTIVE=dev

# ===================================================================
# WebSocket Configuration
# ===================================================================
# 웹소켓 기본 설정
WS_ENDPOINT=/ws/connect
WS_ALLOWED_ORIGINS=http://localhost:5173

# ===================================================================
# Feature Flags
# ===================================================================
# Redis 사용 여부
REDIS_ENABLED=false

# Kafka 사용 여부
KAFKA_ENABLED=false

# ===================================================================
# Environment Specific Settings
# ===================================================================
# Development Environment
DEV_SERVER_PORT=8080
DEV_WS_ALLOWED_ORIGINS=http://localhost:5173
DEV_LOGGING_LEVEL=INFO

# Production Environment
PROD_SERVER_PORT=8080
PROD_WS_ALLOWED_ORIGINS=https://your-domain.com
PROD_LOGGING_LEVEL=INFO

# ===================================================================
# Logging
# ===================================================================
LOGGING_LEVEL=INFO 