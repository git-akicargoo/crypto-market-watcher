<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- 콘솔 로그 설정 -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>
                [BACKEND] %d{HH:mm:ss.SSS} %highlight(%-5level) [%thread] %cyan(%logger{36}) - %msg%n
            </pattern>
        </encoder>
    </appender>

    <!-- 테스트용 로그 레벨 설정 -->
    <logger name="com.example.boot_redis_kafka_mysql.crypto" level="DEBUG"/>
    
    <!-- WebSocket 관련 로그 -->
    <logger name="com.example.boot_redis_kafka_mysql.crypto.exchange" level="DEBUG"/>

    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
    </root>
</configuration> 